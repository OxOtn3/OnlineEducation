<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/titlebar"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入昵称"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信："
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/wechatAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入微信账号"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别："
        android:textSize="16dp"
        />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学校："
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入学校名称"
        />

    <TextView
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="年级："
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/gradeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入年级"
        />

    <TextView
        android:id="@+id/uploadTeaVeriPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传教师资格证照片："
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/uploadTeaVeriPhotoText"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:text="点击上传"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#727182"
        android:textSize="16dp"
        />



    <Button
        android:id="@+id/userInfoColPageSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="确定提交"
        android:background="@drawable/button_drawable"
        />





</LinearLayout>